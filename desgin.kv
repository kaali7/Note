#desgin file
<Main>:
    BoxLayout:
        orientation:"vertical"

        MDCard:
            orientation: 'horizontal'
            spacing:5
            background_color:rgba("#0B0B03")
            padding:[10,0]
            size_hint_y: None
            height: 40

            canvas.before:
                Color:
                    rgba:rgba("#0f0f0f")
            
                RoundedRectangle:
                    size: self.size[0], self.size[1]
                    pos: self.pos
                    radius: [20,20, 0,0]

            But:
                id:file
                text:"[size=16][b]File[/b][/size]"
                markup:True
                font_name:'Comic'
                on_release: root.file_menu(self)
        
            But:
                id:edit
                text:"[size=16][b]Edit[/b][/size]"
                markup:True
                font_name:'Comic'
                on_release: root.edit_menu(self)

            But:
                id:help
                text:"[size=16][b]Help[/b][/size]"
                markup:True
                font_name:'Comic'
                on_release: root.help_menu(self)
            
        
        TextInput:
            background_color:rgba("#0f0f0f")
            foreground_color: rgba("#4BD02F")
            font_size:20
            font_name:'Comic'
            cursor_color:rgba("#708090")
            cursor_width:2.3
