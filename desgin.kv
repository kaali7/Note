#
# dialog of short cut:button and label design 
<Lab_short@Label>:
    size_hint:None,None
    size:60,30
    markup:True
    font_size:14

<But_short@Button>:
    size_hint:None,None
    size:90,30
    markup:True
    font_size:15
    font_name:'Comic'
    background_color:0,0,0,0

    canvas.before:
        Color:
            rgba:rgba('#101010')
    
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10,10]
    

#dialog of short cut
<Short_Cut_Con>:
    size_hint_y:None
    height:150

    GridLayout:
        cols:2
        size_hint_y:None
        height:200
        padding:[50,10]
        spacing:5
        

        Lab_short:
            text:"copy:"
        But_short:
            text:"[b]Ctrl+C[/b]"
                
        Lab_short:
            text:"paste:"
        But_short:
            text:"[b]Ctrl+V[/b]"
            
        Lab_short:
            text:"cut:"
        But_short:
            text:"[b]Ctrl+X[/b]"
                
        Lab_short:
            text:"undo:"
        But_short:
            text:"[b]Ctrl+Z[/b]"

#
## dialog of title change
<Title_Con>:
    orientation: 'vertical'
    size_hint_y:None
    height:100
    spacing:5

    Label:
        text:"Enter Your Note Name"
        font_name:"Comic"
        font_size:16
        size_hint_y:None
        height:60
    
    MDTextField:
        hint_text: 'title'
        font_size:20
        max_text_length: 20
        on_text:root.text_title(self.text)

#
##dialog of replace word
<Replace_Con>:
    orientation: 'vertical'
    size_hint_y:None
    height:150
    spacing:5
    padding:10
    
    MDTextField:
        hint_text:"find word"
        font_size:18
        on_text:root.find_text(self.text)
    
    MDTextField:
        hint_text:"replace word"
        font_size:18
        on_text:root.relplce_text(self.text)


